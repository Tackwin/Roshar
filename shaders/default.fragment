#version 330 core

layout (location = 0) out vec4 g_albedo;
layout (location = 1) out vec4 g_normal;
layout (location = 2) out vec4 g_position;

in vec2 texture_coord;
in vec3 pos;

uniform vec4 color;

uniform sampler2D color_texture;
uniform bool use_color_texture;
uniform sampler2D normal_texture;
uniform bool use_normal_texture;

void main() {
	vec4 texel = vec4(1);
	if (use_color_texture) texel = texture(color_texture, texture_coord);

    g_albedo = vec4(
    	texel.x * color.x,
    	texel.y * color.y,
    	texel.z * color.z,
    	texel.w * color.w
    );

    g_normal = vec4(0.5, 0.5, 1, 1);
    if (use_normal_texture) {
    	g_normal = texture(normal_texture, texture_coord);
    }

    g_position = vec4(pos, 1);
}